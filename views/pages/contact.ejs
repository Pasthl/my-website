<%- include('../partials/header') %>

<section class="contact">
  <h1><%= lang === 'en' ? 'Contact Me' : '联系我' %></h1>
  
  <div class="contact-info">
    <p><%= lang === 'en' ? 'Feel free to reach out to me via:' : '欢迎通过以下方式联系我：' %></p>
    
    <div class="contact-methods">
      <div class="contact-method">
        <h3>Email</h3>
        <p>huajingyu8@gmail.com</p>
      </div>
      
      <div class="contact-method">
        <h3><%= lang === 'en' ? 'Social Media' : '社交媒体' %></h3>
        <ul>
          <li><a href="https://github.com/Pasthl" target="_blank">GitHub</a></li>
          <li><a href="https://www.linkedin.com/in/jingyu-hua" target="_blank">LinkedIn</a></li>
        </ul>
      </div>
    </div>
  </div>
  
  <div class="contact-form">
    <h3><%= lang === 'en' ? 'Send me a message' : '给我发消息' %></h3>
    <form action="/contact" method="POST">
      <div class="form-group">
        <label for="name"><%= lang === 'en' ? 'Name' : '姓名' %></label>
        <input type="text" id="name" name="name" required>
      </div>
      
      <div class="form-group">
        <label for="email"><%= lang === 'en' ? 'Email' : '邮箱' %></label>
        <input type="email" id="email" name="email" required>
      </div>
      
      <div class="form-group">
        <label for="message"><%= lang === 'en' ? 'Message' : '留言' %></label>
        <textarea id="message" name="message" rows="5" required></textarea>
      </div>
      
      <button type="submit"><%= lang === 'en' ? 'Send' : '发送' %></button>
    </form>
  </div>
</section>

<%- include('../partials/footer') %>