<%- include('../partials/header') %>

<section class="projects">
  <h1><%= lang === 'en' ? 'My Projects' : '我的项目' %></h1>
      
  <div class="project-grid">
    <!-- Project 1 -->
    <div class="project-card">
      <div class="project-info">
        <h3 class="project-title">
          <%= lang === 'en' ? 'Personal Website' : '个人网站' %>
        </h3>
        <p class="project-description">
          <%= lang === 'en' ? 'A responsive personal website built with Node.js, Express, and EJS.' : '使用Node.js、Express和EJS构建的响应式个人网站。' %>
        </p>
        <div class="project-tech">
          <span>Node.js</span>
          <span>Express</span>
          <span>EJS</span>
          <span>CSS</span>
        </div>
      </div>
      <div class="project-links">
        <a href="#" class="project-link">
          <%= lang === 'en' ? 'View Project' : '查看项目' %>
        </a>
        <a href="#" class="project-link">GitHub</a>
      </div>
    </div>
     
    <!-- Project 2 -->
    <div class="project-card">
      <div class="project-info">
        <h3 class="project-title">
          <%= lang === 'en' ? 'Task Manager App' : '任务管理应用' %>
        </h3>
        <p class="project-description">
          <%= lang === 'en' ? 'A web application for managing daily tasks and organizing work schedules.' : '用于管理日常任务和组织工作日程的Web应用程序。' %>
        </p>
        <div class="project-tech">
          <span>JavaScript</span>
          <span>React</span>
          <span>MongoDB</span>
          <span>Express</span>
        </div>
      </div>
      <div class="project-links">
        <a href="#" class="project-link">
          <%= lang === 'en' ? 'View Project' : '查看项目' %>
        </a>
        <a href="#" class="project-link">GitHub</a>
      </div>
    </div>
     
    <!-- Project 3 -->
    <div class="project-card">
      <div class="project-info">
        <h3 class="project-title">
          <%= lang === 'en' ? 'Smart World Clock' : '智能世界时钟' %>
        </h3>
        <p class="project-description">
          <%= lang === 'en' ? 'An Internet-connected smart desktop clock with world time, weather updates, alarms, and ambient light sensing capabilities.' : '一款联网智能桌面时钟，具备世界时间显示、天气更新、闹钟和环境光感应功能。' %>
        </p>
        <div class="project-tech">
          <span>FreeRTOS</span>
          <span>WiFi</span>
          <span>I2C/SPI</span>
          <span>Node-RED</span>
        </div>
      </div>
      <div class="project-links">
        <a href="/projects/smart-clock" class="project-link">
          <%= lang === 'en' ? 'View Project' : '查看项目' %>
        </a>
        <a href="https://github.com/ese5160/a14g-final-submission-s25-t03-hotpot.git" target="_blank" class="project-link">GitHub</a>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>