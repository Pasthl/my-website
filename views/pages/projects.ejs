<%- include('../partials/header') %>

<section class="projects">
  <h1><%= lang === 'en' ? 'My Projects' : '我的项目' %></h1>
      
  <div class="project-grid">
    <!-- Project 1 -->
    <div class="project-card">
      <div class="project-info">
        <h3 class="project-title">
          <%= lang === 'en' ? 'Personal Website' : '个人网站' %>
        </h3>
        <p class="project-description">
          <%= lang === 'en' ? 'A responsive personal website built with Node.js, Express, and EJS.' : '使用Node.js、Express和EJS构建的响应式个人网站。' %>
        </p>
        <div class="project-tech">
          <span>Node.js</span>
          <span>Express</span>
          <span>EJS</span>
          <span>CSS</span>
        </div>
      </div>
      <div class="project-links">
        <a href="https://github.com/Pasthl/my-website" class="project-link">GitHub</a>
      </div>
    </div>
     
    <!-- Project 2 -->
    <div class="project-card">
      <div class="project-info">
        <h3 class="project-title">
          <%= lang === 'en' ? 'Smart World Clock' : '智能世界时钟' %>
        </h3>
        <p class="project-description">
          <%= lang === 'en' ? 'An Internet-connected smart desktop clock with world time, weather updates, custom alarms/pomodoro timer/countdown, and ambient light sensing capabilities.' : '一款联网智能桌面时钟，具备世界时间显示、天气更新、自定义闹钟/番茄钟/倒计时和环境光感应功能。' %>
        </p>
        <div class="project-tech">
          <span>PCB Design</span>
          <span>FreeRTOS</span>
          <span>WiFi</span>
          <span>I2C/SPI/UART</span>
          <span>MQTT</span>
          <span>GPIO/ADC/PWM</span>
          <span>Node-RED</span>
          <span>C</span>
        </div>
      </div>
      <div class="project-links">
        <a href="/projects/smart-clock" class="project-link">
          <%= lang === 'en' ? 'View Project' : '查看项目' %>
        </a>
        <a href="https://github.com/ese5160/a14g-final-submission-s25-t03-hotpot.git" target="_blank" class="project-link">GitHub</a>
      </div>
    </div>
     
    <!-- Project 3 -->
    <div class="project-card">
      <div class="project-info">
        <h3 class="project-title">
          <%= lang === 'en' ? 'Robot Unstructured Environment Positioning System' : '机器人非结构化环境定位系统' %>
        </h3>
        <p class="project-description">
          <%= lang === 'en' ? 'A LiDAR-based positioning system for robots in unstructured environments, featuring high-precision point cloud processing and real-time pose estimation.' : '基于激光雷达的机器人非结构化环境定位系统，具备高精度点云处理和实时位姿估算功能。' %>
        </p>
        <div class="project-tech">
          <span>C++</span>
          <span>Qt</span>
          <span>LiDAR</span>
          <span>HALCON</span>
        </div>
      </div>
      <div class="project-links">
        <a href="/projects/robot-positioning" class="project-link">
          <%= lang === 'en' ? 'View Project' : '查看项目' %>
        </a>
        <a href="https://github.com/Pasthl/2D-Lidar-scanning-system" class="project-link">GitHub</a>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>